<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oscar.oscarligthart_pset2.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Welcome to Mad Libs! I will ask you to fill in words to complete a story. You won't be able to see the whole story until you are done filling in all the missing words. That's part of the fun. Please select one of the stories below!"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">


            <Button
                android:text="Simple"
                android:layout_height="wrap_content"
                android:id="@+id/Simple"
                android:onClick = "onClick"
                android:layout_width="111dp"
                android:layout_weight="1" />

            <Button
                android:text="University"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:onClick = "onClick"
                android:id="@+id/University"
                android:layout_weight="1" />

        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:text="Tarzan"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:onClick = "onClick"
            android:id="@+id/Tarzan" />

        <Button
            android:text="Dance"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:onClick = "onClick"
            android:id="@+id/Dance" />


    </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:text="Clothes"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:onClick = "onClick"
                android:id="@+id/Clothes" />


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/madlibs"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
